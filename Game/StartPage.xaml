<Page x:Class="GameProject.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameProject"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      ShowsNavigationUI="False"
      Title="StartPage">
    <Page.Background>
        <SolidColorBrush Color="Black" Opacity="0.7"></SolidColorBrush>
    </Page.Background>
    <StackPanel
        Name="aboutPage" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Одиннадцать спичек</TextBlock>
        <TextBlock TextWrapping="WrapWithOverflow" HorizontalAlignment="Center">Двое игроков по очереди берут одну, две или три спички. Проигрывает тот, кто забирает последнюю!</TextBlock>
        <Button MaxWidth="150" Click="StartButton_Click">Начать</Button>
    </StackPanel>
    
</Page>
